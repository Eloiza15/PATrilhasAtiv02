using System;

namespace Exercicios
{ 
	class Program 
	{
		public static void Main()
		{
			
		//Escreva um programa que peça ao usuário para digitar dois números e exiba o resultado da divisão do primeiro pelo segundo.
		 
		 Console.WriteLine ("Digite o dividendo: ");
		 double dividendo = Convert.ToDouble(Console.ReadLine());
		 
		 Console.WriteLine ("Digite o divisor: ");
		 double divisor = Convert.ToDouble(Console.ReadLine());
		 
		 double quociente = dividendo/divisor;
		 
		 Console.WriteLine("O quociente/resultado dessa divisão é: " + quociente);
		 
		 Console.WriteLine("");
		 Console.Write("Pressione qualquer tecla para fechar..");
		 Console.ReadKey(true);
			
		}
	}
}
