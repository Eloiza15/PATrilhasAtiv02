using System;

namespace Exercicios
{ 
	class Program 
	{
		public static void Main()
		{
			
		//Escreva um programa que peça ao usuário para digitar dois números e exiba a soma deles.
		 
		 Console.WriteLine ("Digite o primeiro número da soma: ");
		 double primeiroNum = Convert.ToDouble(Console.ReadLine());
		 
		 Console.WriteLine ("Digite o segundo número da soma: ");
		 double segundoNum = Convert.ToDouble(Console.ReadLine());
		 
		 double soma = primeiroNum + segundoNum;
		 
		 Console.WriteLine("A soma deles é: " + soma);
		 
		 Console.WriteLine("");
		 Console.Write("Pressione qualquer tecla para fechar..");
		 Console.ReadKey(true);
			
		}
	}
}
