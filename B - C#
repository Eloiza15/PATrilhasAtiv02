using System;

namespace Exercicios
{ 
	class Program 
	{
		public static void Main()
		{
			
		//Escreva um programa que peça ao usuário para digitar um número e exiba o seu dobro.
		 
		 Console.WriteLine ("Digite um número para exibirmos seu dobro: ");
		 double numero = Convert.ToDouble(Console.ReadLine());
		 
		 double dobro = numero*2;
		 
		 Console.WriteLine("O dobro desse número é: " + dobro);
		 
		 Console.WriteLine("");
		 Console.Write("Pressione qualquer tecla para fechar..");
		 Console.ReadKey(true);
			
		}
	}
}
