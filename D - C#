using System;

namespace Exercicios
{ 
	class Program 
	{
		public static void Main()
		{
			
		//Escreva um programa que peça ao usuário para digitar um número e exiba o seu quadrado.
		 
		 Console.WriteLine ("Digite um número para exibirmos o seu quadrado: ");
		 double numero = Convert.ToDouble(Console.ReadLine());
		 
		 double quadrado = numero*numero;
		 
		 Console.WriteLine("Esse número ao quadrado é: " + quadrado);
		 
		 Console.WriteLine("");
		 Console.Write("Pressione qualquer tecla para fechar..");
		 Console.ReadKey(true);
			
		}
	}
}
